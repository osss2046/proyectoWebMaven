<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.InicioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MiLibreria</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.MiLibreria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LibrosServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.BuscarLibrosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SolicitarLibroServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.SolicitarLibroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resenaServlet</servlet-name>
        <servlet-class>com.libreriagradiente.controlador.resenaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/InicioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MiLibreria</servlet-name>
        <url-pattern>/MiLibreria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LibrosServlet</servlet-name>
        <url-pattern>/LibrosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SolicitarLibroServlet</servlet-name>
        <url-pattern>/SolicitarLibroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resenaServlet</servlet-name>
        <url-pattern>/resenaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
